# -*- mode: sh; sh-shell: zsh;-*-

local LOG_PATH="$HOME/History/logs/recoll"
local LOG_FILE="$LOG_PATH/recoll-$(date +%s).log"
local INDEX_PATH='/media/Erudite/Indexes'

local library_list
library_list=(
		'darkarts'
		'fiction'
		'imported'
		'personal_development'
		'reference'
		'sort'
		'linux_doc'
)

for i in "${library_list[@]}"
do
		local recoll_confdir="$INDEX_PATH/$i"
		echo "Processing ${(C)i} Library"
		echo $recoll_confdir >> $LOG_FILE
		RECOLL_CONFDIR=$recoll_confdir \
									command recollindex >>&| $LOG_FILE
done
